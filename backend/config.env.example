# DAPX-backandrepl - Configurazione
# Copia questo file come config.env e modifica i valori

# Server
DAPX_HOST=0.0.0.0
DAPX_PORT=8420

# SSL - Imposta true per abilitare HTTPS automaticamente
DAPX_SSL=false

# Certificati SSL custom (opzionale)
# Se non specificati, verranno generati certificati auto-firmati
#DAPX_SSL_CERT=/path/to/cert.pem
#DAPX_SSL_KEY=/path/to/key.pem

# Database (opzionale - default: /var/lib/dapx-backandrepl/dapx.db)
#DAPX_DB=/custom/path/dapx.db

# Modalit√† sviluppo (hot-reload)
DAPX_RELOAD=false





